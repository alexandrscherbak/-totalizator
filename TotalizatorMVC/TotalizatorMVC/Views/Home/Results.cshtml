@model IEnumerable<TotalizatorMVC.Models.Match>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Results</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstTeam.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondTeam.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in ViewBag.Matches) {
        <tr>
            <td>
                @item.FirstTeam.Name
            </td>
            <td>
                @item.SecondTeam.Name
            </td>
            <td>
                @item.Result
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
